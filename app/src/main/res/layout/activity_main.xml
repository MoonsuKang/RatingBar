<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <com.kms.ratingbar.CustomRatingBar
        android:id="@+id/customRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:emptyStarColor="@android:color/darker_gray"
        app:isIndicator="true"
        app:rating="2.5"
        app:ratingCount="5"
        app:starColor="@color/material_dynamic_secondary30"
        app:starSpacing="30dp"
        app:stepSize="0.25" />

    <TextView
        android:id="@+id/ratingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="2.5"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonRandomRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Random Rating" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonChangeColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Color" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonChangeSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Size" />

</LinearLayout>
